<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/review_source_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal"/>

    <su.levenetc.android.badgeview.BadgeView
        android:id="@+id/review_activity_badge_view"
        android:layout_below="@id/review_source_image_view"
        app:badgeText="4.5"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="4dp"
        app:badgeBackgroundColor="@color/colorPrimary"
        app:badgeTextColor="@android:color/white"
        app:badgeTextSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/review_source_image_view"
        android:id="@+id/author_text_view"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:text="Anonymous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="4dp"
        android:id="@+id/entry_text_view"
        android:text="Review description goes here..."
        android:layout_below="@id/author_text_view"
        android:layout_toRightOf="@id/review_source_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/time_description_text_view"
        android:layout_alignParentRight="true"
        android:text="2 weeks ago"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>