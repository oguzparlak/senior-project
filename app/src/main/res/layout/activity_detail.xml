<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senior.app.ui.activity.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:auto_cycle="false"
                app:pager_animation="Stack">
            </com.daimajia.slider.library.SliderLayout>

            <android.support.v7.widget.CardView
                android:layout_below="@id/slider_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/general_text_view"
                        android:textStyle="bold"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary" />

                    <com.doodle.android.chips.ChipsView
                        android:id="@+id/chips_view"
                        android:layout_margin="8dp"
                        android:layout_below="@id/general_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cv_bg_color="@color/colorPrimary"
                        app:cv_text_color="@android:color/white"
                        app:cv_color="@color/colorPrimary"
                        app:cv_icon_placeholder="@drawable/ic_restaurant_menu_white_24dp"
                        app:cv_chips_margin="12dp"
                        app:cv_vertical_spacing="8dp">

                    </com.doodle.android.chips.ChipsView>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>
